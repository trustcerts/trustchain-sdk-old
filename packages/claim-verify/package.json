{
  "version": "0.4.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "api:platform": "openapi-generator-cli generate -g typescript-axios -i https://platform.dev.trustcerts.de/api-json -o src/platform --api-name-suffix=PlatformApi --additional-properties=supportsES6=true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@trustcerts/claim-verify",
  "author": "trustcerts",
  "module": "dist/claim-verify.esm.js",
  "size-limit": [
    {
      "path": "dist/claim-verify.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/claim-verify.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^jose/(.*)$": "<rootDir>/node_modules/jose/dist/node/cjs/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^6.0.4",
    "@trustcerts/claim-create": "^0.4.0",
    "@trustcerts/config-local": "^0.4.0",
    "@trustcerts/signature-create": "^0.4.0",
    "@trustcerts/wallet": "^0.4.0",
    "@types/mustache": "^4.1.2",
    "@types/node": "^16.11.7",
    "@types/protobufjs": "^6.0.0",
    "@types/qrcode": "^1.4.1",
    "husky": "^7.0.4",
    "size-limit": "^6.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^2.4.7",
    "@trustcerts/core": "^0.4.0",
    "@trustcerts/signature-verify": "^0.4.0",
    "@trustcerts/template-create": "^0.4.0",
    "@trustcerts/template-verify": "^0.4.0",
    "ajv": "^8.8.2",
    "mustache": "^4.2.0",
    "protobufjs": "^6.11.2",
    "qrcode": "^1.4.4"
  },
  "gitHead": "5b6d6c645f256b5b4d8ba37343f091e6fdcda803"
}
