{
  "version": "0.1.6",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=15"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "api:gateway": "openapi-generator-cli generate -g typescript-axios -i https://api.gateway1.dev.trustcerts.de/api-json -o src/bc/gateway --api-name-suffix=GatewayApi --additional-properties=supportsES6=true",
    "api:observer": "openapi-generator-cli generate -g typescript-axios -i https://api.observer1.dev.trustcerts.de/api-json -o src/bc/observer --api-name-suffix=ObserverApi --additional-properties=supportsES6=true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@trustcerts/core",
  "author": "trustcerts",
  "module": "dist/common.esm.js",
  "size-limit": [
    {
      "path": "dist/common.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/common.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^jose/(.*)$": "<rootDir>/node_modules/jose/dist/node/cjs/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.4.7",
    "@size-limit/preset-small-lib": "^5.0.5",
    "@trustcerts/config-local": "^0.1.6",
    "@trustcerts/did-id-create": "^0.1.6",
    "@trustcerts/wallet": "^0.0.6",
    "@types/axios": "^0.14.0",
    "@types/bs58": "^4.0.1",
    "husky": "^7.0.2",
    "size-limit": "^5.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@mattrglobal/bls12381-key-pair": "^0.7.0",
    "@mattrglobal/jsonld-signatures-bbs": "^0.11.0",
    "axios": "^0.24.0",
    "bs58": "^4.0.1",
    "jsonld-signatures": "^9.3.0"
  },
  "gitHead": "9cc3c3d078fe46729a72961bc6bd241667d43309"
}
