{
  "version": "0.4.17",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=15"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@trustcerts/core",
  "author": "trustcerts",
  "module": "dist/common.esm.js",
  "size-limit": [
    {
      "path": "dist/common.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/common.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^jose/(.*)$": "<rootDir>/node_modules/jose/dist/node/cjs/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@trustcerts/config-local": "^0.4.17",
    "@trustcerts/did-id-create": "^0.4.17",
    "@trustcerts/wallet": "^0.4.17",
    "@types/bs58": "^4.0.1",
    "husky": "^7.0.4",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@mattrglobal/bls12381-key-pair": "^0.8.0",
    "@mattrglobal/jsonld-signatures-bbs": "^0.12.0",
    "@trustcerts/gateway": "^0.4.17",
    "@trustcerts/observer": "^0.4.17",
    "axios": "^0.26.0",
    "bs58": "^4.0.1",
    "jsonld-signatures": "^9.3.1"
  },
  "gitHead": "9cc3c3d078fe46729a72961bc6bd241667d43309"
}
